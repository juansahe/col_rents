<!-- Modal SignUp -->
<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<h3><%= t('views.users.sign_up') %></h3>
		</div>
		<div class="modal-body">
			<%= form_for @user, html: { class: "form-horizontal", role: "form" } do |f| %>
			<div class="form-group">
				<%= f.label :name, class: "col-sm-3 control-label" %>
				<div class="col-sm-8">
					<%= f.text_field :name, class:"form-control", placeholder: "Name" %>
				</div>
			</div>
			<div class="form-group">
	      		<%= f.label :email, class: "col-sm-3 control-label" %>
				<div class="col-sm-8">
	      			<%= f.text_field :email, class: "form-control", placeholder: "Email" %>
				</div>
			</div>
			<div class="form-group">
	      		<%= f.label :password, class: "col-sm-3 control-label" %>
				<div class="col-sm-8">
	      			<%= f.password_field :password, class: "form-control", placeholder: "Password" %>
				</div>
			</div>
			<div class="form-group">
	      		<%= f.label :password_confirmation, "Confirmation", class: "col-sm-3 control-label" %>
				<div class="col-sm-8">
	      			<%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirmation" %>
				</div>
			</div>
		</div>
		<div class="modal-footer">
			<div class="form-group">
				<div class="col-sm-11">
					<%= f.submit "Create my account", class: "btn btn-default" %>
				</div>
			</div>
			<% end %>
		</div>
	</div>
</div>