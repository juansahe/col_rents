<!-- Log In Modal -->
<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<h3><%= t('views.users.log_in') %></h3>
		</div>
		<div class="modal-body">
			<%= form_for(:session, url: sessions_path, html: { class: "form-horizontal", role: "form" }) do |f| %>
				<%#= render 'shared/error_messages' %>
				<div class="form-group">
		      		<%= f.label :email, t('activerecord.attributes.user.email'), class: "col-sm-3 control-label" %>
					<div class="col-sm-8">
		      			<%= f.text_field :email, class: "form-control", placeholder: t('activerecord.attributes.user.email') %>
					</div>
				</div>
				<div class="form-group">
		      		<%= f.label :password, t('activerecord.attributes.user.password'),class: "col-sm-3 control-label" %>
					<div class="col-sm-8">
		      			<%= f.password_field :password, class: "form-control", placeholder: t('activerecord.attributes.user.password') %>
					</div>
				</div>
				<div class="modal-footer">
					<div class="form-group">
						<div class="col-sm-6">
							<%= f.submit t('views.users.log_in'), class: "btn btn-success" %>
						</div>
						<div class="col-sm-6">
							<span><%= t('views.users.new_user_') %> <%= link_to t('views.users.sign_up'), new_user_path %></span>
						</div>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>